#: import Factory kivy.factory.Factory

<MainGrid>
    
    dataList: dataList
    outputDir: outputDir

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Button:
                text: "Open File..."
                on_release: root.btnOpenFile()

            TextInput:
                id: dataList
                multiline: False

            Button:
                text: "Save Location..."
                on_press: root.btnSaveFile()

            TextInput:
                id: outputDir
                multiline: False

        Button:
            text: "Submit"
            on_press: root.btnGo()

<FileSelectPopup@Popup>
    id: dataListPopup
    auto_dismiss: False
    size_hint: 0.7, 0.7
    pos_hint: {'x':0.1 , 'top': 0.9} 
    title: "Please Select Your File"

    BoxLayout:
        padding: 50
        spaceing: 50

        orientation: 'vertical'
        size: root.width, root.height
        FileChooserIconView:
            id: dataListChooser
            on_selection: dataListPopup.dataListSelected(dataListChooser.selection)

        Button:
            size_hint_y: 0
            height: 50
            text: "Cancel"
            font_size: 24
            on_release: root.dismiss()