#: import Factory kivy.factory.Factory

<MainGrid>

    dataList: dataList
    outputDir: outputDir
    outputConsole: outputConsole

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Button:
                text: "Open File..."
                on_release: root.btnOpenFile()

            TextInput:
                id: dataList
                multiline: False

            Button:
                text: "Save Location..."
                on_press: root.btnSaveFile()

            TextInput:
                id: outputDir
                multiline: False

        Button:
            text: "Process..."
            on_press: root.btnGo()
        
        TextInput:
            id: outputConsole
            multiline: True
            font_size: 24
            text: "TEST"
